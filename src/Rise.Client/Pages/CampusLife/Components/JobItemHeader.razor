@using Microsoft.Extensions.Localization
@using Rise.Client.Pages.News.Components
@using Rise.Client.Resources.Pages.CampusLife
@using Rise.Shared.CampusLife
@using Rise.Shared.CampusLife.Jobs
@inject ISnackbar Snackbar
@inject NavigationManager NavigationManager
@inject IJSRuntime Js
@inject IStringLocalizer<CampusLife> Loc
@inject IConfiguration Config

<div class="detail-header" style="background-image: url(@($"{Config["ImageBasePath"]}/{Item?.ImageUrl}")">
    <div class="image-overlay"></div>
    <div class="header-content">
        <MudIconButton Icon="@Icons.Material.Filled.ArrowRightAlt"
                       OnClick="@(() => NavigationManager.NavigateTo($"/{Page}"))" />

        <p class="detail-date">@Item?.StartDate.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture) - @Item?.EndDate.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)</p>
        <h2>@Item?.Name</h2>
        <p class="detail-company">@Item?.CompanyName</p>
        
        <TopicLabel 
            Label="@Item?.JobCategory"
            Icon="@(CategoriesJob.AllJobs.FirstOrDefault(t => t.Name == Item?.JobCategory)?.Icon)" />
        
        <div class="share-icon">
            <MudIconButton Icon="@Icons.Material.Filled.Link"
                           OnClick="CopyLink"
                           title="@Loc["CopyLink"]"/>
        </div>
    </div>
</div>
