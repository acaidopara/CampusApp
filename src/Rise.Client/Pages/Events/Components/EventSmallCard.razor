@using System.Globalization
@using Rise.Client.Pages.News.Components
@using Rise.Shared.Events
@inject IConfiguration Config

<a href="/nieuws-en-events/events/@Event.Id">
    <div class="event-card-content">
        <div class="event-card-image-wrapper">
            <img src="@($"{Config["ImageBasePath"]}/{@Event.ImageUrl}")" alt="@Event.Title" class="event-card-image"/>
            <div class="event-card-dateblock">
                <p>@Event.Date.Date.ToString("MMM", CultureInfo.InvariantCulture)</p>
                <p>@Event.Date.Date.Day</p>
            </div>
        </div>
        <div class="event-card-text">
            <TopicLabel Label="@Event.Subject"/>
            <h3 class="event-card-title">@Event.Title</h3>
        </div>
    </div>
</a>

@code {
    [Parameter, EditorRequired] public EventDto.Detail Event { get; set; } = null!;
    [Inject] NavigationManager NavigationManager { get; set; } = default!;
}